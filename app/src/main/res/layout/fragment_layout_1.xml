<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_layout_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:padding="@dimen/standardPadding"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".screens.tab1.Tab1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginBottom="@dimen/tab1ListMarginBottom"
        tools:ignore="UselessParent">


            <ListView
                android:id="@+id/contactList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="NestedScrolling" />

    </ScrollView>

    <EditText
        android:id="@+id/txtContact"
        android:layout_width="match_parent"
        android:layout_height="@dimen/txtHeight"
        android:layout_marginEnd="@dimen/txtMarginEnd"
        android:inputType="text"
        android:hint="@string/txt_contact_enter_name"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimaryForActions"
        />

    <Button
        android:id="@+id/btnAddContact"
        android:layout_width="@dimen/BtnDimens"
        android:layout_height="@dimen/BtnDimens"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimaryForActions"
        android:text="@string/btn_add_contact"
        android:textAllCaps="false" />


</RelativeLayout>
