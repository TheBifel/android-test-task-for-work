<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_primary"
    android:orientation="vertical"
    android:padding="@dimen/standard_padding"
    tools:context=".screens.tab1.Tab1">


    <ListView
        android:id="@+id/contact_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/tab1_list_margin_bottom" />


    <EditText
        android:id="@+id/txt_contact_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/txt_height"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/txt_margin_end"
        android:background="@color/color_primary_for_actions"
        android:hint="@string/txt_contact_enter_name"
        android:inputType="text" />

    <Button
        android:id="@+id/btn_add_contact"
        android:layout_width="@dimen/btn_dimens"
        android:layout_height="@dimen/btn_dimens"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@color/color_primary_for_actions"
        android:text="@string/btn_add_contact"
        android:textAllCaps="false" />


</RelativeLayout>
